{% style %}
  .pricing-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }
  .pricing-card-header-{{ section.id }} {
    border-radius: 18px 18px 0 0;
    overflow: hidden;
    position: relative;
    height: 11rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .header-pattern-overlay-{{ section.id }} {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    mix-blend-mode: overlay;
    pointer-events: none;
  }
  .btn-gradient-{{ section.id }} {
    background: linear-gradient(77.87deg, #00511C -24.41%, #187F10 103.64%);
    transition: transform 0.2s ease, opacity 0.3s ease;
  }
  .btn-gradient-{{ section.id }}:hover {
    opacity: 0.9;
    transform: scale(1.02);
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 1024px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
    }
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
{% endstyle %}

<div class="pricing-plan-main-box page-width pricing-section-{{ section.id }} section-{{ section.id }}-padding py-12 px-6 {{ section.settings.extra-class }}">
  <div class="pricing-plan-inner-box max-w-full mx-auto">
    {% if section.settings.heading != blank %}
      <h2 class="pricing-plan-heading text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900 leading-tight">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="pricing-plan-box-wrapper flex flex-wrap justify-center gap-8">
      {% for block in section.blocks %}
        <div
          class="pricing-plan-box-slides flex-1 min-w-[300px] max-w-[300px] bg-white rounded-[24px] shadow-sm flex flex-col border border-gray-100"
          {{ block.shopify_attributes }}
        >
          <div
            class="pricing-plan-inner-slide pricing-card-header-{{ section.id }}"
            style="background-color: {{ block.settings.card_header_color }};"
          >
            {% if block.settings.header_image != blank %}
              <div
                class="pricing-plan-header-overlay header-pattern-overlay-{{ section.id }}"
                style="background-image: url('{{ block.settings.header_image |  image_url  }}'); opacity: {{ block.settings.pattern_opacity | divided_by: 100.0 }};"
              ></div>
            {% endif %}

            <div class="pricing-plan-header-content relative p-6 text-white z-10">
              <h3 class="header-pricing-plan-name text-2xl font-semibold">{{ block.settings.plan_name }}</h3>
              <div class="header-pricing-plan-price flex items-baseline mt-1">
                <span class="text-4xl font-bold">${{ block.settings.price }}</span>
                <span class="text-lg opacity-80">/mo</span>
              </div>
              <p class="header-pricing-plan-subheading text-sm mt-1 font-light opacity-90">
                {{ block.settings.sub_heading }}
              </p>
            </div>
          </div>

          <div class="feature-pricing-plan-main p-8 flex-grow">
            <ul class="feature-pricing-plan-wrapper space-y-4">
              {%- assign features = block.settings.features_list | newline_to_br | split: '<br />' -%}
              {% for feature in features %}
                {% if feature != blank %}
                  <li class="feature-pricing-plan-slide flex items-center gap-3">
                    <span class="feature-pricing-plan-inner flex-shrink-0 w-5 h-5">
                      {% if block.settings.feature_icon != blank %}
                        <img
                          src="{{ block.settings.feature_icon | image_url }}"
                          class="feature-pricing-plan-img w-full h-full object-contain"
                          alt="icon"
                          height=""
                          width=""
                        >
                      {% else %}
                        <svg
                          class="feature-pricing-plan-svg w-full h-full text-green-500"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                        </svg>
                      {% endif %}
                    </span>
                    <span class="feature-pricing-plan-text text-gray-700 text-base">{{ feature | strip }}</span>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
          {% if block.settings.button_link != blank %}
            <div class="feature-pricing-plan-btn p-8 pt-0">
              <a
                href="{{ block.settings.button_link }}"
                class="feature-pricing-plan-anchor btn-gradient-{{ section.id }} block w-full text-center text-white font-bold py-4 rounded-full uppercase tracking-widest text-sm"
              >
                {{ block.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Coaching Pricing Flex",
  "settings": [
    {
      "type": "text",
      "id": "extra-class",
      "label": "Extra Class"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Choose the Plan That Fits Your Coaching Business"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background",
      "default": "#F3F4F6"
    },
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top Desktop",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom Desktop",
      "default": 52
    },
    {
      "type": "header",
      "content": "Tablet Padding"
    },
    {
      "type": "range",
      "id": "padding_top_tablet",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top Tablet",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom_tablet",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom Tablet",
      "default": 50
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top Mobile",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom Mobile",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "plan",
      "name": "Pricing Plan",
      "settings": [
        {
          "type": "color",
          "id": "card_header_color",
          "label": "Header Background Color",
          "default": "#064e3b"
        },
        {
          "type": "image_picker",
          "id": "header_image",
          "label": "Header Pattern Image"
        },
        {
          "type": "range",
          "id": "pattern_opacity",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "%",
          "label": "Pattern Visibility",
          "default": 40
        },
        {
          "type": "text",
          "id": "plan_name",
          "label": "Plan Name",
          "default": "Starter"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "29"
        },
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Target Audience",
          "default": "For solo coaches"
        },
        {
          "type": "image_picker",
          "id": "feature_icon",
          "label": "List Icon (e.g. Right Sign)"
        },
        {
          "type": "textarea",
          "id": "features_list",
          "label": "Features (One per line)",
          "default": "Live lessons\nVideo analysis\nPayment processing\nUnlimited storage"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "CHOOSE PLAN"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Coaching Pricing Flex",
      "blocks": [{ "type": "plan" }, { "type": "plan" }, { "type": "plan" }]
    }
  ]
}
{% endschema %}
