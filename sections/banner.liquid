<div class="golf-app-hero relative">
  <div>
    <img
      src="{{ section.settings.desktop_bg | image_url }}"
      alt="BG"
      loading="lazy"
      width="auto"
      height="auto"
      class="absolute w-full min-1582:w-[calc(100%_-_141px)] h-full top-0 left-0 object-cover pointer-events-none max-990:hidden"
    >
    <img
      src="{{ section.settings.mobile_bg | image_url }}"
      alt="BG"
      loading="lazy"
      width="auto"
      height="auto"
      class="absolute w-full h-full top-0 left-0 object-cover pointer-events-none min-990:hidden"
    >
  </div>
  <div class="golf-app-hero__grid flex flex-col-reverse min-990:flex-row relative z-1">
    <!-- LEFT CONTENT -->
    <div class="golf-app-hero__content min-990:flex-[0_0_56.64%] px-[28px] min-768:px-[30px] min-990:pl-[30px] min-1440:pl-[135px] min-990:pr-[100px] min-1440:pr-[189px] pt-[36px] pb-[54px] min-990:pt-[70px] min-990:pb-[58px] min-990:flex min-990:flex-col min-990:justify-center">
      {% if section.settings.top_text != blank %}
        <p class="golf-app-hero__top-text h5 uppercase mb-[8px] min-990:mb-[15px] text-green0 max-990:text-center">
          {{ section.settings.top_text }}
        </p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <div class="golf-app-hero__heading h1 mb-[20px] min-990:mb-[14px] max-990:text-center">
          {{ section.settings.heading }}
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="golf-app-hero__description font-medium text-[15px] leading-[22px] tracking-[0.15px] min-990:text-[19px] min-990:leading-[30px] min-990:tracking-[0.19px] max-w-[337px] min-990:max-w-[465px] mb-[39px] min-990:mb-[57px] max-990:text-center max-990:mx-auto">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a
          href="{{ section.settings.button_url }}"
          class="golf-app-hero__button ctm-button button-green button-svg justify-end gap-[28px] min-990:gap-[85px] pr-[30px] min-990:pr-[38px] min-w-[246px] min-990:min-w-[362px] max-990:mx-auto"
        >
          {{ section.settings.button_text }}
          <svg xmlns="http://www.w3.org/2000/svg" width="37" height="20" viewBox="0 0 37 20" fill="none">
            <path d="M0 9.88391H35M35 9.88391L26 0.883911M35 9.88391L26 18.8839" stroke="currentcolor" stroke-width="2.5"/>
          </svg>
        </a>
      {% endif %}

      <div class="golf-app-hero__store-buttons flex flex-wrap gap-[21px] mt-[30px] min-990:mt-[48px] max-990:justify-center">
        {% if section.settings.app_store_image != blank and section.settings.app_store_url != blank %}
          <a
            href="{{ section.settings.app_store_url }}"
            target="_blank"
            class="inline-block flex-[0_0_calc(50%_-_11px)] min-393:flex-[0_0_158px] min-990:flex-[0_0_165px]"
          >
            <img
              src="{{ section.settings.app_store_image | image_url: width: 300 }}"
              alt="Download on the App Store"
              loading="lazy"
              width="auto"
              height="auto"
            >
          </a>
        {% endif %}

        {% if section.settings.play_store_image != blank and section.settings.play_store_url != blank %}
          <a
            href="{{ section.settings.play_store_url }}"
            target="_blank"
            class="inline-block flex-[0_0_calc(50%_-_11px)] min-393:flex-[0_0_158px] min-990:flex-[0_0_165px]"
          >
            <img
              src="{{ section.settings.play_store_image | image_url: width: 300 }}"
              alt="Get it on Google Play"
              loading="lazy"
              width="auto"
              height="auto"
            >
          </a>
        {% endif %}
      </div>
    </div>

    <!-- RIGHT IMAGES -->
    <div class="golf-app-hero__images min-990:flex-[0_0_43.36%]">
      <!-- MOBILE COMBINED IMAGE -->
      {% comment %}
        {% if section.settings.mobile_combined_image != blank %}
          <div class="golf-app-hero__mobile-combined">
            <img
              src="{{ section.settings.mobile_combined_image | image_url }}"
              alt="Live virtual golf lessons"
              loading="lazy"
              width="auto"
              height="auto"
            >
          </div>
        {% endif %}
      {% endcomment %}

      <!-- DESKTOP IMAGE STACK -->
      <div class="golf-app-hero__desktop-stack relative max-990:overflow-hidden min-990:h-full">
        {% if section.settings.desktop_image != blank %}
          <div class="golf-app-hero__desktop-image min-990:h-full">
            <img
              src="{{ section.settings.desktop_image | image_url }}"
              alt="Golf player"
              loading="lazy"
              width="auto"
              height="auto"
              class="w-full h-auto min-990:min-h-full aspect-[1.04/1] object-cover max-768:hidden"
            >
            <img
              src="{{ section.settings.main_mobile_image | image_url }}"
              alt="Golf player"
              loading="lazy"
              width="auto"
              height="auto"
              class="w-full h-auto aspect-[1.17/1] object-cover min-768:hidden"
            >
          </div>
        {% endif %}

        <div class="golf-app-hero__mobile-images absolute max-w-full w-[379px] min-990:w-[653px] bottom-0 left-0 min-393:left-[11px] min-990:left-[-100px] min-1440:left-[-189px]">
          {% if section.settings.mobile_image_1 != blank %}
            <img
              src="{{ section.settings.mobile_image_1 | image_url }}"
              alt="Mobile app preview 1"
              loading="lazy"
              width="auto"
              height="auto"
              class="w-full h-auto object-cover max-990:hidden"
            >
          {% endif %}
          {% if section.settings.mobile_combined_image != blank %}
            <img
              src="{{ section.settings.mobile_combined_image | image_url }}"
              alt="Live virtual golf lessons"
              loading="lazy"
              width="auto"
              height="auto"
              class="w-full h-auto object-cover min-990:hidden"
            >
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Golf App Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_bg",
      "label": "Desktop BG"
    },
    {
      "type": "image_picker",
      "id": "mobile_bg",
      "label": "Mobile BG"
    },
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Text",
      "default": "LIVE GOLF COACHING. ANYTIME, ANYWHERE."
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Teach or train from anywhere with live video, instant replay, and performance tracking in one app.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Golf Image"
    },
    {
      "type": "image_picker",
      "id": "main_mobile_image",
      "label": "Mobile Golf Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image_1",
      "label": "Mobile App Image 1"
    },
    {
      "type": "image_picker",
      "id": "mobile_combined_image",
      "label": "Mobile Combined Image (Golf + Phones)"
    },
    {
      "type": "image_picker",
      "id": "app_store_image",
      "label": "App Store Badge Image"
    },
    {
      "type": "url",
      "id": "app_store_url",
      "label": "App Store URL"
    },
    {
      "type": "image_picker",
      "id": "play_store_image",
      "label": "Google Play Badge Image"
    },
    {
      "type": "url",
      "id": "play_store_url",
      "label": "Google Play URL"
    }
  ],
  "presets": [
    {
      "name": "Golf App Banner"
    }
  ]
}
{% endschema %}
