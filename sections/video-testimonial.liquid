<style>
  .vt-swiper {
    position: relative;
  }

  .vt-slide {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
  }

  .vt-video-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .vt-slide img,
  .vt-slide video {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    background: white;
    border-radius: 24px;
  }

  .vt-poster {
    position: absolute;
    inset: 0;
    cursor: pointer;
  }

  .vt-poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .vt-play-btn {
    position: absolute;
    inset: 0;
    margin: auto;
    border: none;
    cursor: pointer;
  }
  .vt-poster {
    cursor: pointer;
  }

  .vt-poster[style*="display: none"] {
    pointer-events: none;
  }
  .vt-video-wrapper,
.vt-video-wrapper * {
  touch-action: manipulation;
}


  @media (min-width: 1280px) {
    .vt-swiper .swiper-slide {
      width: 24%;
    }
  }

  @media (max-width: 1280px) {
    .vt-swiper .swiper-slide {
      width: auto;
    }
  }
  /* Add to your existing CSS */
.vt-video::-webkit-media-controls {
  touch-action: manipulation;
}

.vt-video::-webkit-media-controls-panel {
  touch-action: manipulation;
}

.vt-video::-webkit-media-controls-play-button,
.vt-video::-webkit-media-controls-timeline,
.vt-video::-webkit-media-controls-current-time-display,
.vt-video::-webkit-media-controls-time-remaining-display,
.vt-video::-webkit-media-controls-timeline-container,
.vt-video::-webkit-media-controls-volume-slider-container,
.vt-video::-webkit-media-controls-volume-slider,
.vt-video::-webkit-media-controls-mute-button {
  touch-action: manipulation;
}
</style>

