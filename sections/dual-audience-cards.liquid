<div class="dual-audience-section" id="dual-audience-main">
  <div class="dual-audience-grid grid-cols-1 min-990:grid-cols-2">
    <!-- LEFT CARD -->
    <div
      class="dual-card dual-card--left relative"
    >
      <div class="dual-card-bg dual-card-left-bg absolute w-full h-full top-0 left-0 pointer-events-none">
        {% if section.settings.bg_image_left != blank %}
          <img
            src="{{ section.settings.bg_image_left | image_url }}"
            alt="bg-img"
            class="max-990:hidden w-full h-full object-cover object-top scroll-trigger animate--slide-in"
            loading="lazy"
            width="auto"
            height="auto"
          >
        {% endif %}
        {% if section.settings.bg_image_left_mobile != blank %}
          <img
            src="{{ section.settings.bg_image_left_mobile | image_url }}"
            alt="bg-img"
            class="min-990:hidden w-full h-full object-cover object-top scroll-trigger animate--slide-in"
            loading="lazy"
            width="auto"
            height="auto"
          >
        {% endif %}
      </div>
      <div
        id="dual-card-left"
        class="dual-card__inner relative z-1 px-[28px] min-990:max-w-[632px] min-990:mx-auto pt-[276px] min-990:pt-[303px] pb-[60px] min-990:pb-[100px] scroll-trigger animate--slide-in"
      >
        <div class="dual-card__inner-start px-[17px] min-990:px-[28px] pt-[15px] min-990:pt-[26px] pb-[27px] min-990:pb-[66px] bg-white rounded-[22px]">
          <div class="dual-card__inner-above px-[32px] min-990:px-[32px] pt-[30px] min-990:pt-[26px] pb-[35px] min-990:pb-[38px] rounded-[10px] min-990:rounded-[25px]">
            {% if section.settings.top_label_left != blank %}
              <span class="dual-card__tag scroll-trigger animate--slide-in">{{ section.settings.top_label_left }}</span>
            {% endif %}

            {% if section.settings.heading_left != blank %}
              <div class="dual-card__heading h3 scroll-trigger animate--slide-in">
                {{ section.settings.heading_left }}
              </div>
            {% endif %}

            {% if section.settings.description_left != blank %}
              <p class="dual-card__description text-h6 scroll-trigger animate--slide-in">
                {{ section.settings.description_left }}
              </p>
            {% endif %}
          </div>

          <div class="dual-features">
            {% for block in section.blocks %}
              {% if block.settings.position == 'left' %}
                <div class="dual-feature scroll-trigger animate--slide-in" {{ block.shopify_attributes }}>
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url }}"
                      alt="{{ block.settings.text | escape }}"
                      loading="lazy"
                      width="auto"
                      height="auto"
                    >
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <span>{{ block.settings.text }}</span>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>

          {% if section.settings.button_text_left != blank %}
            <a
              href="{{ section.settings.button_url_left }}"
              class="dual-card__button ctm-button button-green button-svg justify-start gap-[20px] pr-[30px] min-1440:pr-[40px] min-1440:pl-[40px] min-w-[246px] min-1440:min-w-[unset] mt-[33px] max-768:hidden scroll-trigger animate--slide-in"
            >
              {{ section.settings.button_text_left }}
              <svg xmlns="http://www.w3.org/2000/svg" width="37" height="20" viewBox="0 0 37 20" fill="none">
                <path d="M0 9.88391H35M35 9.88391L26 0.883911M35 9.88391L26 18.8839" stroke="currentcolor" stroke-width="2.5"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- RIGHT CARD -->
    <div
      class="dual-card dual-card--right relative"
    >
      <div class="dual-card-bg dual-card-right-bg absolute w-full h-full top-0 left-0 pointer-events-none">
        {% if section.settings.bg_image_right != blank %}
          <img
            src="{{ section.settings.bg_image_right | image_url }}"
            alt="bg-img"
            class="max-990:hidden w-full h-full object-cover object-top scroll-trigger animate--slide-in"
            loading="lazy"
            width="auto"
            height="auto"
          >
        {% endif %}
        {% if section.settings.bg_image_right_mobile != blank %}
          <img
            src="{{ section.settings.bg_image_right_mobile | image_url }}"
            alt="bg-img"
            class="min-990:hidden w-full h-full object-cover object-top scroll-trigger animate--slide-in"
            loading="lazy"
            width="auto"
            height="auto"
          >
        {% endif %}
      </div>
      <div
        id="dual-card-right"
        class="dual-card__inner relative z-1 px-[28px] min-990:max-w-[632px] min-990:mx-auto pt-[276px] min-990:pt-[303px] pb-[60px] min-990:pb-[100px]"
      >
        <div class="dual-card__inner-start px-[17px] min-990:px-[28px] pt-[15px] min-990:pt-[26px] pb-[27px] min-990:pb-[66px] bg-white rounded-[22px]">
          <div class="dual-card__inner-above px-[32px] min-990:px-[32px] pt-[30px] min-990:pt-[26px] pb-[35px] min-990:pb-[38px] rounded-[10px] min-990:rounded-[25px]">
            {% if section.settings.top_label_right != blank %}
              <span class="dual-card__tag scroll-trigger animate--slide-in">
                {{- section.settings.top_label_right -}}
              </span>
            {% endif %}

            {% if section.settings.heading_right != blank %}
              <div class="dual-card__heading h3 scroll-trigger animate--slide-in">
                {{ section.settings.heading_right }}
              </div>
            {% endif %}

            {% if section.settings.description_right != blank %}
              <p class="dual-card__description text-h6 scroll-trigger animate--slide-in">
                {{ section.settings.description_right }}
              </p>
            {% endif %}
          </div>

          <div class="dual-features">
            {% for block in section.blocks %}
              {% if block.settings.position == 'right' %}
                <div class="dual-feature scroll-trigger animate--slide-in" {{ block.shopify_attributes }}>
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url }}"
                      alt="{{ block.settings.text | escape }}"
                      loading="lazy"
                      width="auto"
                      height="auto"
                    >
                  {% endif %}
                  {% if block.settings.text != blank %}
                    <span>{{ block.settings.text }}</span>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>

          {% if section.settings.button_text_right != blank %}
            <a
              href="{{ section.settings.button_url_right }}"
              class="dual-card__button ctm-button button-green button-svg justify-start gap-[20px] pr-[30px] min-1440:pr-[40px] min-1440:pl-[40px] min-w-[246px] min-1440:min-w-[unset] mt-[33px] max-768:hidden scroll-trigger animate--slide-in"
            >
              {{ section.settings.button_text_right }}
              <svg xmlns="http://www.w3.org/2000/svg" width="37" height="20" viewBox="0 0 37 20" fill="none">
                <path d="M0 9.88391H35M35 9.88391L26 0.883911M35 9.88391L26 18.8839" stroke="currentcolor" stroke-width="2.5"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const equalizeHeadings = () => {
      const cards = document.querySelectorAll('.dual-card__inner-start');
      if (!cards.length) return;

      // Always reset first
      cards.forEach((card) => {
        card.style.height = 'auto';
      });

      // Only apply equal height on >= 990px
      if (window.innerWidth < 990) return;

      let maxHeight = 0;
      cards.forEach((card) => {
        maxHeight = Math.max(maxHeight, card.offsetHeight);
      });

      cards.forEach((card) => {
        card.style.height = `${maxHeight}px`;
      });
    };

    // Initial run
    equalizeHeadings();

    // Re-run on resize
    window.addEventListener('resize', equalizeHeadings);
  });
</script>

