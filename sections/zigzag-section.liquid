{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding max-w-[1264px] mx-auto border-b border-[#DBDBDB]">
  {%- if section.settings.show_h2 and section.settings.main_h2 != blank -%}
    <h2
      class="h2 text-center min-[1440px]:!px-[200px] text-gray-900"
      style="margin-bottom: {{ section.settings.heading-bottom-padding }}px;"
    >
      {{ section.settings.main_h2 }}
    </h2>
  {%- endif -%}

  <div class="flex flex-col lg:flex-row items-center gap-10 lg:gap-20 {% if section.settings.layout == 'text_first' %}lg:flex-row-reverse{% endif %}">
    <div class="w-full lg:w-1/2">
      <div class="overflow-hidden">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1800 | image_tag: class: 'w-full h-full', loading: 'lazy' }}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'w-full h-full bg-gray-200' }}
        {%- endif -%}
      </div>
    </div>

    <div class="w-full lg:w-1/2 flex flex-col gap-6">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h3 class="font-body font-bold" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h3>

          {%- when 'paragraph' -%}
            <div class="space-y-4" {{ block.shopify_attributes }}>
              {% assign para_lines = block.settings.text | newline_to_br | split: '<br />' %}
              {% for line in para_lines %}
                <p class="text-lg text-gray-600 leading-relaxed">{{ line | strip }}</p>
              {% endfor %}
            </div>

          {%- when 'list' -%}
            <ul class="flex flex-col gap-4 mt-2" {{ block.shopify_attributes }}>
              {% assign list_items = block.settings.list_content | newline_to_br | split: '<br />' %}
              {% for item in list_items %}
                {% if item != blank %}
                  <li class="flex items-center gap-3">
                    <span class="mt-1 flex-shrink-0 bg-green1 rounded-full p-1">
                      <svg
                        class="w-5 h-5 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        stroke-width="4"
                      >
                        <path d="M5 13l4 4L19 7"></path>
                      </svg>
                    </span>
                    <span class="font-body">{{ item | strip }}</span>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Zigzag",
  "settings": [
    {
      "type": "text",
      "id": "main_h2",
      "label": "Section H2 (Title)",
      "default": "Live Lessons"
    },
    {
      "type": "range",
      "id": "heading-bottom-padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },
    {
      "type": "checkbox",
      "id": "show_h2",
      "label": "Show Section Title",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        { "value": "image_first", "label": "Image first" },
        { "value": "text_first", "label": "Text first" }
      ],
      "default": "image_first",
      "label": "Desktop Layout (Zigzag Toggle)"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "H3 Heading",
      "limit": 1,
      "settings": [{ "type": "text", "id": "heading", "label": "Heading", "default": "Live Virtual Lessons" }]
    },
    {
      "type": "paragraph",
      "name": "Paragraph Block",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text Content",
          "info": "Press Enter for new paragraphs",
          "default": "Coach students anywhere with live video."
        }
      ]
    },
    {
      "type": "list",
      "name": "List Block",
      "settings": [
        {
          "type": "textarea",
          "id": "list_content",
          "label": "List Items",
          "info": "One item per line",
          "default": "No geographic limitations\nInstant replay\n Demo line"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Zigzag Row",
      "blocks": [{ "type": "heading" }, { "type": "paragraph" }, { "type": "list" }]
    }
  ]
}
{% endschema %}
