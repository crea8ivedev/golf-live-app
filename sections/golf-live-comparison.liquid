{% comment %}
  Section: Golf Live Comparison
  Theme: Dawn
{% endcomment %}

<section class="golf-live-compare page-width" id="section-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <h2 class="glc-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% if section.settings.subheading != blank %}
    <p class="glc-subheading">{{ section.settings.subheading }}</p>
  {% endif %}

  <div class="container-136">
    <div class="glc-grid flex items-start gap-11 max-990:flex-wrap">
      <!-- WITH GOLF LIVE -->
      <div
        class="glc-card glc-green 990:w-1/2 w-full relative bg-cover bg-top bg-no-repeat overflow-hidden pr-9 py-12 pl-0 rounded-[28px]"
        style="{% if section.settings.green_bg != blank %}background-image:url({{ section.settings.green_bg | image_url }});{% endif %}"
      >
        <div class="flex items-center gap-[23px]">
          {% if section.settings.green_phone != blank %}
            <div class="glc-phone w-[45%]">
              <img
                src="{{ section.settings.green_phone | image_url: width: 600 }}"
                alt="With Golf Live App"
                loading="lazy"
                height="auto"
                width="auto"
              >
            </div>
          {% endif %}

          <div class="flex flex-col w-3/5 text-white text-left mt-[80px] min-[1660px]:mt-[100px]">
            <h3 class="glc-card-title text-white">{{ section.settings.green_title }}</h3>

            <div class="glc-shape mt-[20px]">
              <svg width="171" height="8" viewBox="0 0 171 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M170.359 3.77954C166.136 -0.59314 159.128 -0.593143 154.905 3.77954C150.681 8.15222 143.674 8.15222 139.45 3.77954C135.227 -0.593141 128.219 -0.593141 123.996 3.77954C119.772 8.15222 112.765 8.15222 108.541 3.77954C104.318 -0.593142 97.3102 -0.593142 93.0866 3.77954C88.863 8.15222 81.8557 8.15222 77.6321 3.77954C73.4085 -0.593142 66.4012 -0.593142 62.1775 3.77954C57.9539 8.15222 50.9466 8.15222 46.723 3.77954C42.4994 -0.593142 35.4921 -0.593141 31.2685 3.77954C27.0448 8.15222 20.0375 8.15222 15.8139 3.77954C11.5903 -0.593141 4.58299 -0.593142 0.359375 3.77954" stroke="white"/>
              </svg>
            </div>

            <ul class="glc-list mt-[32px]">
              {% for block in section.blocks %}
                {% if block.type == 'with_item' %}
                  <li class="glc-item glc-item--check text-white text-left" {{ block.shopify_attributes }}>
                    {% if block.settings.icon != blank %}
                      <img
                        src="{{ block.settings.icon | image_url: width: 40 }}"
                        alt=""
                        class="glc-item-icon"
                        loading="lazy"
                        height="auto"
                        width="auto"
                      >
                    {% endif %}
                    <span>{{ block.settings.text }}</span>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>

      <!-- WITHOUT GOLF LIVE -->
      <div
        class="glc-card glc-grey 990:w-1/2 w-full relative bg-cover bg-top bg-no-repeat overflow-hidden pl-9 py-12 pr-0 rounded-[28px]"
        style="{% if section.settings.grey_bg != blank %}background-image:url({{ section.settings.grey_bg | image_url }});{% endif %}"
      >
        <div class="flex items-center gap-[23px]">
          <div class="flex flex-col w-3/5 text-white text-left mt-[80px] min-[1660px]:mt-[100px]">
            <h3 class="glc-card-title text-black">{{ section.settings.grey_title }}</h3>

            <div class="glc-shape mt-[20px]">
              <svg width="171" height="8" viewBox="0 0 171 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M170.359 3.77954C166.136 -0.59314 159.128 -0.593143 154.905 3.77954C150.681 8.15222 143.674 8.15222 139.45 3.77954C135.227 -0.593141 128.219 -0.593141 123.996 3.77954C119.772 8.15222 112.765 8.15222 108.541 3.77954C104.318 -0.593142 97.3102 -0.593142 93.0866 3.77954C88.863 8.15222 81.8557 8.15222 77.6321 3.77954C73.4085 -0.593142 66.4012 -0.593142 62.1775 3.77954C57.9539 8.15222 50.9466 8.15222 46.723 3.77954C42.4994 -0.593142 35.4921 -0.593141 31.2685 3.77954C27.0448 8.15222 20.0375 8.15222 15.8139 3.77954C11.5903 -0.593141 4.58299 -0.593142 0.359375 3.77954" stroke="#646764"/>
              </svg>
            </div>

            <ul class="glc-list mt-[32px]">
              {% for block in section.blocks %}
                {% if block.type == 'without_item' %}
                  <li class="glc-item glc-item--cross" {{ block.shopify_attributes }}>
                    {% if block.settings.icon != blank %}
                      <img
                        src="{{ block.settings.icon | image_url: width: 40 }}"
                        alt=""
                        class="glc-item-icon"
                        loading="lazy"
                        height="auto"
                        width="auto"
                      >
                    {% endif %}
                    <span>{{ block.settings.text }}</span>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>

          {% if section.settings.grey_phone != blank %}
            <div class="glc-phone w-[45%]">
              <img
                src="{{ section.settings.grey_phone | image_url: width: 600 }}"
                alt="Without Golf Live"
                loading="lazy"
                height="auto"
                width="auto"
              >
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .golf-live-compare {
    padding: 80px 0;
    text-align: center;
  }

  .glc-subheading {
    max-width: 720px;
    margin: 0 auto 48px;
  }

  .glc-green .glc-phone img {
    max-width: 253px;
    width: 100%;
  }

  .glc-green .glc-grey img {
    max-width: 183px;
    width: 100%;
  }

  .glc-list {
    list-style: none;
  }

  .glc-item {
    display: flex;
    align-items: center;
    gap: 23px;
    margin-bottom: 25px;
    font-size: 17px;
    line-height: 1.5;
    font-weight: 600;
  }

  .glc-item-icon {
    width: 42px;
    height: 42px;
    flex-shrink: 0;
    margin-top: 3px;
  }

  @media (max-width: 768px) {
    .glc-phone img {
      max-width: 180px;
    }
  }
</style>

{% schema %}
{
  "name": "Golf Live Comparison",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Why Golf Live Beats the Competition"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Section Subheading"
    },
    {
      "type": "image_picker",
      "id": "green_bg",
      "label": "Green Background Image"
    },
    {
      "type": "image_picker",
      "id": "green_phone",
      "label": "Green Phone Image"
    },
    {
      "type": "text",
      "id": "green_title",
      "label": "Green Column Title",
      "default": "With Golf Live"
    },
    {
      "type": "image_picker",
      "id": "grey_bg",
      "label": "Grey Background Image"
    },
    {
      "type": "image_picker",
      "id": "grey_phone",
      "label": "Grey Phone Image"
    },
    {
      "type": "text",
      "id": "grey_title",
      "label": "Grey Column Title",
      "default": "Without Golf Live"
    }
  ],
  "blocks": [
    {
      "type": "with_item",
      "name": "With Golf Live Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "List Icon Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "without_item",
      "name": "Without Golf Live Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "List Icon Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Golf Live Comparison"
    }
  ]
}
{% endschema %}
