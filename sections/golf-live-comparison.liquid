{% comment %}
  Section: Golf Live Comparison
  Theme: Dawn
{% endcomment %}

<section class="golf-live-compare page-width" id="section-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <h2 class="glc-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% if section.settings.subheading != blank %}
    <p class="glc-subheading">{{ section.settings.subheading }}</p>
  {% endif %}

  <div class="glc-grid">
    <!-- WITH GOLF LIVE -->
    <div
      class="glc-card glc-green"
      style="
        {% if section.settings.green_bg != blank %}
          background-image: url({{ section.settings.green_bg | image_url }});
        {% endif %}
      "
    >
      {% if section.settings.green_phone != blank %}
        <div class="glc-phone">
          <img
            src="{{ section.settings.green_phone | image_url: width: 600 }}"
            alt="With Golf Live App"
            loading="lazy"
            width="auto"
            height="auto"
          >
        </div>
      {% endif %}

      <h3 class="glc-card-title">{{ section.settings.green_title }}</h3>

      <ul class="glc-list">
        {% for block in section.blocks %}
          {% if block.type == 'with_item' %}
            <li class="glc-item glc-item--check" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <!-- WITHOUT GOLF LIVE -->
    <div
      class="glc-card glc-grey"
      style="
        {% if section.settings.grey_bg != blank %}
          background-image: url({{ section.settings.grey_bg | image_url }});
        {% endif %}
      "
    >
      {% if section.settings.grey_phone != blank %}
        <div class="glc-phone">
          <img
            src="{{ section.settings.grey_phone | image_url: width: 600 }}"
            alt="Without Golf Live"
            loading="lazy"
            width="auto"
            height="auto"
          >
        </div>
      {% endif %}

      <h3 class="glc-card-title">{{ section.settings.grey_title }}</h3>

      <ul class="glc-list">
        {% for block in section.blocks %}
          {% if block.type == 'without_item' %}
            <li class="glc-item glc-item--cross" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

<style>
  .golf-live-compare {
    padding: 80px 0;
    text-align: center;
  }

  .glc-subheading {
    max-width: 720px;
    margin: 0 auto 48px;
  }

  .glc-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
  }

  .glc-card {
    position: relative;
    border-radius: 28px;
    padding: 48px 36px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    text-align: left;
    overflow: hidden;
  }

  .glc-phone {
    text-align: center;
    margin-bottom: 24px;
  }

  .glc-phone img {
    max-width: 220px;
    width: 100%;
    height: auto;
  }

  .glc-card-title {
    margin-bottom: 28px;
  }

  .glc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .glc-item {
    position: relative;
    padding-left: 44px;
    margin-bottom: 18px;
    line-height: 1.5;
  }

  .glc-item--check::before,
  .glc-item--cross::before {
    content: '';
    position: absolute;
    left: 0;
    top: 2px;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }

  .glc-item--check::before {
    content: '✓';
    background: #0f6a2d;
    color: #fff;
  }

  .glc-item--cross::before {
    content: '✕';
    background: #000;
    color: #fff;
  }

  @media (max-width: 768px) {
    .glc-grid {
      grid-template-columns: 1fr;
    }

    .glc-card {
      padding: 36px 24px;
    }

    .glc-phone img {
      max-width: 180px;
    }
  }
</style>

{% schema %}
{
  "name": "Golf Live Comparison",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Why Golf Live Beats the Competition"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Section Subheading"
    },

    {
      "type": "image_picker",
      "id": "green_bg",
      "label": "Green Background Image"
    },
    {
      "type": "image_picker",
      "id": "green_phone",
      "label": "Green Phone Image"
    },
    {
      "type": "text",
      "id": "green_title",
      "label": "Green Column Title",
      "default": "With Golf Live"
    },

    {
      "type": "image_picker",
      "id": "grey_bg",
      "label": "Grey Background Image"
    },
    {
      "type": "image_picker",
      "id": "grey_phone",
      "label": "Grey Phone Image"
    },
    {
      "type": "text",
      "id": "grey_title",
      "label": "Grey Column Title",
      "default": "Without Golf Live"
    }
  ],
  "blocks": [
    {
      "type": "with_item",
      "name": "With Golf Live Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "without_item",
      "name": "Without Golf Live Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Golf Live Comparison"
    }
  ]
}
{% endschema %}
