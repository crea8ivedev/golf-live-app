<style>
  .vt-swiper {
    position: relative;
  }

  .vt-slide {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
  }

  .vt-video-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .vt-slide img,
  .vt-slide video {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    background: white;
    border-radius: 24px;
  }

  .vt-poster {
    position: absolute;
    inset: 0;
    cursor: pointer;
  }

  .vt-poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .vt-play-btn {
    position: absolute;
    inset: 0;
    margin: auto;
    border: none;
    cursor: pointer;
  }
  @media (min-width: 1280px) {
    .vt-swiper .swiper-slide {
      width: 24%;
    }
  }

  @media (max-width: 1280px) {
    .vt-swiper .swiper-slide {
      width: auto;
    }
  }
</style>

<section class="vt-wrapper pt-[43px] min-990:pt-[94px] pb-0">
  <div class="min-990:px-[42px]">
    <div class="max-990:px-[28px]">
      {% if section.settings.heading != blank %}
        <h2 class="vt-heading text-center max-w-[300px] min-768:max-w-[700px] min-990:max-w-[700px] min-1440:max-w-[800px] min-1582:max-w-[1069px] mx-auto mb-[31px] min-990:mb-[54px] scroll-trigger animate--slide-in">
          {{ section.settings.heading | replace: '[highlight]', '<span>' | replace: '[/highlight]', '</span>' }}
        </h2>
      {% endif %}
    </div>

    <div class="relative max-990:px-[28px]">
      <div class="swiper vt-swiper" data-enable-clone="{{ section.settings.enable_slide_clone }}">
        <div class="swiper-wrapper justify-center gap-[18px] flex-wrap">
          {% for block in section.blocks %}
            <div
              class="swiper-slide flex-[0_0_100%] min-[768px]:flex-[0_0_48%] min-[990px]:flex-[0_0_31%] min-[1280px]:flex-[0_0_23%] vt-slide scroll-trigger animate--slide-in"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.video != blank %}
                <div class="vt-video-wrapper">
                  {{
                    block.settings.video
                    | video_tag:
                      controls: true,
                      autoplay: false,
                      muted: false,
                      loop: false,
                      preload: 'metadata',
                      class: 'vt-video',
                      aria_label: 'Product demonstration video showing key features'
                  }}

                  {% if block.settings.image != blank %}
                    <div class="vt-poster" data-video-poster>
                      <img
                        src="{{ block.settings.image | image_url: width: 800 }}"
                        alt="{{ block.settings.name | escape | default: 'vt-video-banner' }}"
                        loading="lazy"
                        width="auto"
                        height="auto"
                      >
                      <button
                        class="vt-play-btn flex justify-center items-center"
                        type="button"
                        aria-label="Play video"
                      >
                        {% render 'video-test-play-icon' %}
                      </button>
                    </div>
                  {% endif %}
                </div>
              {% elsif block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.name | escape }}"
                  loading="lazy"
                  width="auto"
                  height="auto"
                >
              {% endif %}

              {% if block.settings.name != blank %}
                <div class="vt-caption">
                  harmonious
                  <h4>{{ block.settings.name }}</h4>
                  <p>{{ block.settings.subtitle }}</p>
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
      {% if section.settings.show_arrows %}
        <div class="swiper-button-prev vt-arrow vt-prev">
          {% render 'swiper-video-testi-prev' %}
        </div>
        <div class="swiper-button-next vt-arrow vt-next">
          {% render 'swiper-video-testi-next' %}
        </div>
      {% endif %}
    </div>

    <div class="max-990:px-[28px]">
      <div class="vt-buttons flex flex-wrap justify-center items-center gap-x-[66px] gap-y-[16px] max-990:mx-[28px] mt-[40px] min-990:mt-[65px]">
        {% if section.settings.golfer_text != blank %}
          <a
            href="{{ section.settings.golfer_url }}"
            class="golf-app-hero__button ctm-button button-green button-svg justify-end gap-[42px] pr-[57px] min-990:pr-[56px] min-w-[337px] min-990:min-w-[346px] max-990:mx-auto scroll-trigger animate--slide-in"
          >
            {{ section.settings.golfer_text }}
            <svg xmlns="http://www.w3.org/2000/svg" width="37" height="20" viewBox="0 0 37 20" fill="none">
              <path d="M0 9.88391H35M35 9.88391L26 0.883911M35 9.88391L26 18.8839" stroke="currentcolor" stroke-width="2.5"/>
            </svg>
          </a>
        {% endif %}
        {% if section.settings.coach_text != blank %}
          <a
            href="{{ section.settings.coach_url }}"
            class="golf-app-hero__button ctm-button button-green button-svg justify-end gap-[42px] pr-[57px] min-990:pr-[56px] min-w-[337px] min-990:min-w-[346px] max-990:mx-auto scroll-trigger animate--slide-in"
          >
            {{ section.settings.coach_text }}
            <svg xmlns="http://www.w3.org/2000/svg" width="37" height="20" viewBox="0 0 37 20" fill="none">
              <path d="M0 9.88391H35M35 9.88391L26 0.883911M35 9.88391L26 18.8839" stroke="currentcolor" stroke-width="2.5"/>
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.vt-video').forEach(function (video) {
      const posterImg = video.querySelector('img');

      if (posterImg && !posterImg.hasAttribute('alt')) {
        posterImg.setAttribute('alt', video.getAttribute('aria-label') || 'Product demonstration video');
      }
    });
  });
</script>
